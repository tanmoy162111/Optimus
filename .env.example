# Intelligence Module Configuration
OPTIMUS_ENABLE_MEMORY=true
OPTIMUS_ENABLE_WEB_INTEL=true
OPTIMUS_ENABLE_DELEGATION=true
OPTIMUS_ENABLE_ADAPTIVE=true
OPTIMUS_ENABLE_CHAINING=true
OPTIMUS_ENABLE_EXPLAINABLE=true
OPTIMUS_ENABLE_LEARNING=true
OPTIMUS_ENABLE_ZERODAY=true
OPTIMUS_ENABLE_CAMPAIGN=true

# Database
OPTIMUS_MEMORY_DB=data/optimus_memory.db

# External APIs (optional but recommended)
SHODAN_API_KEY=your_shodan_key
VIRUSTOTAL_API_KEY=your_vt_key
CENSYS_API_KEY=your_censys_key

# LLM Integration (optional)
LLM_PROVIDER=anthropic
LLM_API_KEY=your_anthropic_key
LLM_MODEL=claude-3-sonnet-20240229

# Existing Configuration
FLASK_ENV=development
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# Kali VM SSH Configuration
KALI_HOST=192.168.1.105
KALI_PORT=22
KALI_USER=kali
KALI_PASSWORD=kali
KALI_KEY_PATH=

# Paths
DATASET_PATH=./datasets
MODEL_PATH=./models
DATA_PATH=./data

# Training
TRAINING_ENABLED=true
RL_EPSILON_START=1.0
RL_EPSILON_DECAY=0.995
RL_EPSILON_MIN=0.05

# Ollama LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codellama:7b-instruct
OLLAMA_TIMEOUT=120
OLLAMA_ENABLED=true

# Self-Learning Parser
PARSER_LEARNING_ENABLED=true
PARSER_MIN_CONFIDENCE=0.7

# Deep RL Configuration
DEEP_RL_ENABLED=true
DEEP_RL_STATE_DIM=128
DEEP_RL_NUM_ACTIONS=35
DEEP_RL_LEARNING_RATE=0.0001
DEEP_RL_GAMMA=0.99
DEEP_RL_BUFFER_SIZE=100000
DEEP_RL_BATCH_SIZE=64
DEEP_RL_USE_PER=true
DEEP_RL_USE_NOISY=true

# Intelligence Configuration
NVD_API_KEY=
INTEL_CACHE_TTL=3600

# Dark Web Intelligence (requires Tor service)
DARK_WEB_ENABLED=false
TOR_PROXY_HOST=127.0.0.1
TOR_PROXY_PORT=9050
